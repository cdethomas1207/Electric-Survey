<script>
const nextBtn = document.getElementById('nextBtn');
let currentQuestion = 1;

function showQuestion(n) {
    document.querySelectorAll('.question').forEach(q => q.classList.add('hidden'));
    const qEl = document.getElementById('q' + n);
    if(qEl) qEl.classList.remove('hidden');
}

function getAnswer(name) {
    const checked = document.querySelector('input[name="' + name + '"]:checked');
    return checked ? checked.value : null;
}

nextBtn.addEventListener('click', () => {
    const q1Answer = getAnswer('q1');

    if(currentQuestion === 1) {
        if(!q1Answer) { alert("Please answer the question."); return; }
        if(q1Answer === 'hire' || q1Answer === 'self') currentQuestion = 2;
        else currentQuestion = 5;
    } else if(currentQuestion === 2) {
        const q2Answer = getAnswer('q2');
        if(!q2Answer) { alert("Please answer the question."); return; }
        if(q1Answer === 'hire') currentQuestion = 3;
        else currentQuestion = 4;
    } else if(currentQuestion === 10) {
        const answer10 = getAnswer('q10');
        if(answer10 === 'yes') document.getElementById('emailInput').classList.remove('hidden');
        else document.getElementById('emailInput').classList.add('hidden');

        document.getElementById('surveyForm').submit();
        alert("Thank you for completing the survey!");
        return;
    } else {
        currentQuestion++;
    }

    showQuestion(currentQuestion);
});

// Show first question initially
showQuestion(currentQuestion);
</script>

